<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/sunflower</item>
        <item name="colorPrimaryDark">@color/squash</item>
        <item name="android:shadowColor">@color/dark</item>

        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarTheme">
        <item name="titleTextColor">@color/greyish_brown</item>
        <item name="android:background">@color/sunflower</item>
    </style>

</resources>
