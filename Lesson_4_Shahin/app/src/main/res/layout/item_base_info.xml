<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewBase"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="2dp">

    <ImageView
        android:id="@+id/imageBaseInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:cropToPadding="true"
        android:scaleType="fitStart"
        tools:src="@drawable/ic_bill" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="64dp"
        android:orientation="vertical"
        android:paddingTop="13dp"
        android:paddingBottom="13dp">

        <TextView
            android:id="@+id/textViewBaseTitle"
            style="@style/TextStyleTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:maxLines="1"
            tools:text="@string/title_receipt" />

        <TextView
            android:id="@+id/textViewBaseInfo"
            style="@style/TextStyleInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            tools:text="@string/info_receipt" />


    </LinearLayout>

</androidx.cardview.widget.CardView>